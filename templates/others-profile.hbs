{{> header}}
<section id="viewProfile">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{user.username}}</h2>

            <a id="btnFollow" class="chirp-author" data-id="{{user._id}}" href="#" onclick="follow('{{user.username}}')">{{followOrUnfollow}}</a>

            <div id="userProfileStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> |
                <span>{{followingCount}} following</span> |
                <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="profileChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            {{#each chirps}}
            <article class="chirp">
                <div class="titlebar">
                    <a href="#" class="chirp-author">{{author}}</a>
                    <span class="chirp-time">{{date}}</span>
                </div>
                <p>{{text}}</p>
            </article>
            {{else}}
                <p style="font-style: italic">No chirps in database</p>
            {{/each}}
        </div>
    </div>
</section>
{{> footer}}