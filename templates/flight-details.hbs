{{> navigation}}
<section id="viewFlightDetails">
    <div class="ticket-area">
        <div class="ticket-area-left">
            <img src="{{flight.image}}" alt="">
        </div>
        <div class="ticket-area-right">
            <h3>{{flight.destination}}</h3>
            <div>from {{flight.origin}}</div>
            <div class="data-and-time">
                {{flight.departure}} {{flight.departureTime}}
                {{#if flight.isEditable}}
                <a href="#" class="edit-flight-detail" onclick="loadEditFlightDetails('{{flight._id}}')"></a>
                {{/if}}
            </div>
            <div>
                {{flight.seats}} Seats ({{flight.cost}}$ per seat)
            </div>
        </div>
    </div>
</section>
{{> footer}}