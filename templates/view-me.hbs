{{> header}}
<section id="viewMe">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{user.username}}</h2>

            <form id="formSubmitChirp" class="chirp-form">
                <textarea name="text" class="chirp-input"></textarea>
                <input class="chirp-submit" id="btnSubmitChirp" value="Chirp" type="submit" onclick="postChirp(event)">
            </form>

            <div id="myStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> |
                <span>{{followingCount}} following</span> |
                <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="myChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            {{#each chirps}}
            <article class="chirp">
                <div class="titlebar">
                    <a href="#" class="chirp-author">{{author}}</a>
                    <span class="chirp-time"> <a href="#" data-id="{{_id}}" onclick="deleteChirp('{{_id}}')">delete</a> {{date}}</span>
                </div>
                <p>{{text}}</p>
            </article>
            {{else}}
                <p style="font-style: italic">No chirps in database</p>
            {{/each}}
        </div>
    </div>
</section>
{{> footer}}